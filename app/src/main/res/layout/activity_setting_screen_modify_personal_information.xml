<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.SettingScreenModifyPersonalInformation">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SettingPersonalInformationScreenVerticalLeftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SettingPersonalInformationScreenHorizontalTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <ImageView
        android:id="@+id/SettingPersonalInformationScreenAvatarImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/SettingPersonalInformationScreenHorizontalTopGuideline"
        app:layout_constraintLeft_toLeftOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toRightOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenFirstNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenNickNameEditText"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="First Name"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenLastNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenFirstNameEditText"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="Last Name"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenPhoneEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenLastNameEditText"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="Phone"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenSchoolEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenPhoneEditText"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="School"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenSpecializationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenSchoolEditText"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="Specialization"/>

    <EditText
        android:id="@+id/SettingPersonalInformationScreenNickNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SettingPersonalInformationScreenHorizontalTopGuideline"
        app:layout_constraintLeft_toRightOf="@id/SettingPersonalInformationScreenVerticalLeftGuideline"
        app:layout_constraintRight_toLeftOf="@id/SettingPersonalInformationScreenVerticalRightGuideline"
        android:hint="Nick name"/>

</androidx.constraintlayout.widget.ConstraintLayout>