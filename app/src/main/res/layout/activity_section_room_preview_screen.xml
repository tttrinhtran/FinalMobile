<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SectionRoomPreviewScreen">
    
    <TextView
        android:id="@+id/SectionRoomPreviewScreenTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/SectionRoomPreviewScreenExitButton"
        app:layout_constraintBottom_toBottomOf="@id/SectionRoomPreviewScreenExitButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Preview"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SectionRoomPreviewScreenExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <androidx.camera.view.PreviewView
        android:id="@+id/SectionRoomPreviewScreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/SectionRoomPreviewScreenExitButton"
        app:layout_constraintBottom_toTopOf="@id/SectionRoomPreviewScreenOffVideoCheckBox"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/SectionRoomPreviewScreenOffVideoCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/SectionRoomPreviewScreenMuteCheckBox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:text="Turn off your video"/>

    <CheckBox
        android:id="@+id/SectionRoomPreviewScreenMuteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/SectionRoomPreviewScreenEnterButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:text="Mute your micro"/>
    
    <Button
        android:id="@+id/SectionRoomPreviewScreenEnterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Enter room"
        android:layout_marginBottom="10dp"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>