<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen.RegisterScreenSignup">

    <TextView
        android:id="@+id/RegisterScreenSignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Sign Up"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/RegisterScreenSignUpUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenSignUpText"
        android:layout_marginTop="10dp"
        android:hint="Username"/>
    <EditText
        android:id="@+id/RegisterScreenSignUpPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenSignUpUsernameEditText"
        android:layout_marginTop="10dp"
        android:hint="Password"/>
    <EditText
        android:id="@+id/RegisterScreenSignUpConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenSignUpPasswordEditText"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"/>
    <Button
        android:id="@+id/RegisterScreenSignUpNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenSignUpConfirmPasswordEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:text="Next"/>

</androidx.constraintlayout.widget.ConstraintLayout>