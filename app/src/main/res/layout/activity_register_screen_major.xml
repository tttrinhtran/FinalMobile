<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen.RegisterScreenMajor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sign_srceenbg"
            android:scaleType="centerCrop"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/RegisterScreenMajorTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:text="Major"
        android:textSize="24sp"
        android:textColor="@color/primary_blue"
        android:fontFamily="@font/tommy_medium"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/RegisterScreenMajorDescribeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenMajorTitleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:textSize="14dp"
        android:text="Please enter the required information to continue" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RegisterScreenMajorSchoolLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenMajorDescribeText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="42dp"
        android:layout_marginHorizontal="22dp"
        android:hint=""
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/RegisterScreenMajorSchoolEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            android:paddingStart="10dp"
            android:hint="Your school/university/college"
            android:backgroundTint="@android:color/transparent"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RegisterScreenMajorSpecializationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/RegisterScreenMajorSchoolLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="22dp"
        android:hint=""
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/RegisterScreenMajorSpecializationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="20dp"
            android:paddingStart="10dp"
            android:hint="Your specialize"
            android:backgroundTint="@android:color/transparent"
            android:textSize="14sp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/RegisterScreenMajorNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:background="@color/primary_blue"
        android:text="Next"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>