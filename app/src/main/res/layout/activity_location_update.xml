<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationUpdateActivity"
    android:id="@+id/activity_location_update"
    android:background="@drawable/sign_srceenbg"
    >

    <ImageView
        android:id="@+id/locationPerImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/location"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371"/>

    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationPerImg"
            android:id="@+id/locationPerText"
            android:fontFamily="@font/tommy_medium"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/primary_blue"
            android:layout_marginTop="10dp"
            android:text="Our app need your permission so we can find your closet connetion and bring you together">


        </TextView>

    <Button
        android:id="@+id/LocationUpdateNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        app:layout_constraintTop_toBottomOf="@id/locationPerText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary_blue"
        />

    <ProgressBar
        android:id="@+id/LocationUpdateProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LocationUpdateNextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>